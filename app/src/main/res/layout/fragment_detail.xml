<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.moetaz.movieapp.Fragment.DetailFragment"
    android:orientation="vertical"
    android:background="@color/ColorCard"
    >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <android.support.v7.widget.CardView

            android:layout_height="100dp"
            android:layout_width="match_parent"
            app:cardBackgroundColor="@android:color/darker_gray"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:id="@+id/textTitle"
                android:textSize="25dp"
                />
        </android.support.v7.widget.CardView>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="350dp">
            <ImageView
                android:scaleType="fitXY"
                android:layout_width="200dp"
                android:layout_height="350dp"
                android:layout_margin="16dp"
                android:id="@+id/image_detail"
               />
            <LinearLayout
                android:paddingLeft="29dp"
                android:paddingTop="15dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_toRightOf="@id/image_detail"
               >
             <TextView
                 android:textColor="@android:color/black"
                 android:textSize="17dp"
                 android:paddingBottom="10dp"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:id="@+id/textrelaesDate"
                  />
                <TextView
                    android:textColor="@android:color/black"
                    android:paddingBottom="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textVoteAverage"
                    />

                <ImageButton

                    android:id="@+id/favoriteButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/button_normal"
                    android:background="#00ffffff"
                    />

            </LinearLayout>
        </RelativeLayout>



        <TextView
            android:textColor="@android:color/black"
            android:textSize="17dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingBottom="35dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textOverview"
           />
        <View

            android:layout_gravity="center"
            android:backgroundTint="@android:color/darker_gray"
            android:layout_width="350dp"
            android:layout_height="2dp"
            android:background="#FF0000FF" />

            <LinearLayout
                android:orientation="vertical"
                android:paddingTop="20dp"
                android:paddingBottom="20dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingBottom="15dp"
                    app:cardUseCompatPadding="true"
                    app:cardCornerRadius="10dp"
                    android:id="@+id/cardview1"
                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">
                        <ImageView
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:src="@drawable/trailericon"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="TRAILER 1"
                            android:gravity="center_vertical"/>

                    </LinearLayout>

                </android.support.v7.widget.CardView>
                <android.support.v7.widget.CardView
                    android:id="@+id/cardview2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingBottom="15dp"
                    app:cardUseCompatPadding="true"
                    app:cardCornerRadius="10dp"
                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">
                        <ImageView
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:src="@drawable/trailericon"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="TRAILER 2"
                            android:gravity="center_vertical"/>

                    </LinearLayout>

                </android.support.v7.widget.CardView>
                <android.support.v7.widget.CardView
                    android:id="@+id/cardview3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingBottom="15dp"
                    app:cardUseCompatPadding="true"
                    app:cardCornerRadius="10dp"
                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">
                        <ImageView
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:src="@drawable/trailericon"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="TRAILER 3"
                            android:gravity="center_vertical"/>

                    </LinearLayout>

                </android.support.v7.widget.CardView>

            </LinearLayout>

            <LinearLayout
                android:paddingTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/imageAuther1"
                    android:paddingLeft="20dp"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:src="@drawable/avatar"/>
                <TextView
                    android:gravity="left|center"
                    android:textColor="@android:color/black"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textSize="20dp"
                    android:id="@+id/auther1"/>
             </LinearLayout>

            <TextView
                android:textColor="@android:color/black"
                android:textSize="17dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textreviwe1"
                />
            <TextView
                android:paddingLeft="20dp"
                android:textColor="@android:color/black"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/texturl1"
               />


            <LinearLayout
                android:paddingTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/imageAuther2"
                    android:paddingLeft="20dp"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:src="@drawable/avatar"/>

                <TextView
                    android:gravity="left|center"
                    android:textColor="@android:color/black"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textSize="20dp"
                    android:id="@+id/auther2"/>
            </LinearLayout>

            <TextView
                android:textColor="@android:color/black"
                android:textSize="17dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textreviwe2"
                />
            <TextView
                android:paddingLeft="20dp"
                android:textColor="@android:color/black"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/texturl2"
                />


            <LinearLayout
                android:paddingTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/imageAuther3"
                    android:paddingLeft="20dp"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:src="@drawable/avatar"/>
                <TextView
                    android:gravity="left|center"
                    android:textColor="@android:color/black"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textSize="20dp"
                    android:id="@+id/auther3"/>
            </LinearLayout>

            <TextView
                android:textColor="@android:color/black"
                android:textSize="17dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textreviwe3"
                />
            <TextView
                android:paddingLeft="20dp"
                android:textColor="@android:color/black"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/texturl3"
                />

        </LinearLayout>

    </ScrollView>
</LinearLayout>
