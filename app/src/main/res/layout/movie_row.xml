<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout

        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_margin="10dp"
        android:layout_height="250dp">


    <View
            android:elevation="1dp"
            android:background="#fff"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toTopOf="parent"
            android:id="@+id/layout_view"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintVertical_bias="0.0"/>
    <ImageView
            android:elevation="5dp"
            android:scaleType="fitXY"
            android:layout_width="0dp"
            android:layout_height="250dp"
            app:srcCompat="@drawable/poster"
            android:id="@+id/posterImage"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="16dp"
            app:layout_constraintDimensionRatio="w,1:2"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginEnd="8dp"
             app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintVertical_bias="1.0"/>

    <TextView
            android:elevation="5dp"
            android:textColor="#fff"
            android:padding="10dp"
            android:textSize="21sp"
            android:background="@drawable/button_shape"
            android:text="7.2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/movieRating"
            app:layout_constraintEnd_toEndOf="@+id/posterImage"
            app:layout_constraintStart_toEndOf="@+id/posterImage"
            android:layout_marginStart="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/posterImage"
            app:layout_constraintHorizontal_bias="0.564"
            android:layout_marginBottom="8dp"/>

    <TextView
            android:id="@+id/lang"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="4dp"
            android:background="@drawable/lang_shape"
            android:elevation="1dp"
            android:padding="4dp"
            android:text="English"
            android:textColor="#fff"
            android:textSize="13sp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@+id/posterImage"
            app:layout_constraintTop_toBottomOf="@+id/date" />

    <TextView
            android:id="@+id/movieDesc"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:elevation="1dp"
            android:padding="3dp"
            android:text="105 minmmkmfkm;vm vlfdlvkldfv lfdvl vlfdvklnfdvnldfvnflnvfnvlfdnvldfnvmfknv"
            android:textColor="#D1A8A8"
            android:textSize="12sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/movieRating"
            app:layout_constraintEnd_toEndOf="@+id/layout_view"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toEndOf="@+id/posterImage"
            app:layout_constraintTop_toBottomOf="@+id/lang" />

    <TextView
            android:id="@+id/date"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="8dp"
            android:elevation="1dp"
            android:text="Action , Adventure and Family "
            android:textColor="#CCB1B1"
            android:textSize="12sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@id/layout_view"
            app:layout_constraintStart_toEndOf="@+id/posterImage"
            app:layout_constraintTop_toBottomOf="@+id/movieTitle" />

    <TextView

            android:id="@+id/movieTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="8dp"
            android:elevation="1dp"
            android:text="The Lion King 2019"
            android:textColor="#000"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@+id/layout_view"
            app:layout_constraintStart_toEndOf="@+id/posterImage"
            app:layout_constraintTop_toTopOf="@+id/layout_view" />

    <ImageView
            android:tag="unfav"
            android:id="@+id/movieFav"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="16dp"
            android:elevation="1dp"
            app:layout_constraintBottom_toBottomOf="@+id/layout_view"
            app:layout_constraintEnd_toEndOf="@+id/layout_view"
            app:srcCompat="@drawable/ic_unfav" />

</androidx.constraintlayout.widget.ConstraintLayout>
